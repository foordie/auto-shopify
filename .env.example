# Environment Configuration
NEXT_PUBLIC_ENVIRONMENT=development

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# JWT Authentication (Legacy - will be replaced by Clerk)
JWT_SECRET=your-super-secure-jwt-secret-change-in-production-min-32-chars

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# Database (Neon PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@hostname:port/database?sslmode=require

# Shopify Partner API (for production store creation)
SHOPIFY_PARTNER_API_KEY=your-shopify-partner-api-key
SHOPIFY_PARTNER_API_SECRET=your-shopify-partner-api-secret
SHOPIFY_PARTNER_ORGANIZATION_ID=your-organization-id

# Development/Testing URLs
NEXT_PUBLIC_VERCEL_URL=your-app.vercel.app

# Environment
NODE_ENV=development

# Optional: Analytics and Monitoring
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
SENTRY_DSN=your-sentry-dsn-for-error-tracking